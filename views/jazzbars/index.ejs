<% layout('layouts/boilerplate') %>

    <div id="cluster-map" class="mb-3"></div>
    <h1>All Jazz Bars</h1>
    
    <% for (let jazzbar of jazzbars) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (jazzbar.images.length) { %> 
                    <img src="<%= jazzbar.images[0].url %> " alt="" class="img-fluid">
                    <% } else { %>
                    <img src="https://res.cloudinary.com/zltc1206/image/upload/v1611256966/JazzSky/1_dhtaxa.jpg" alt="" class="img-fluid">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= jazzbar.title %> </h5>
                        <p class="card-text"><%= jazzbar.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= jazzbar.location %> </small>
                        </p>
                        <a href="/jazzbars/<%= jazzbar._id %>" class="btn btn-primary">View <%= jazzbar.title %> </a>
                    </div>
                </div>
            </div>
        </div> 
    <% } %>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const jazzbars = { features: <%-JSON.stringify(jazzbars)%> };
    </script>

    <script src="/javascripts/clusterMap.js"></script>